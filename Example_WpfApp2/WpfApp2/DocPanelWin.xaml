<Window x:Class="WpfApp2.DocPanelWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="DocPanelWin" Height="450" Width="800">
    <Grid>

        <DockPanel>
            <Button DockPanel.Dock="Left" Content="Btn 1"/>
            <Button DockPanel.Dock="Right" Content="Btn 2"/>
            <Button DockPanel.Dock="Top" Content="Btn 3"/>
            <Button DockPanel.Dock="Bottom" Content="Btn 4" VerticalAlignment="Bottom"/>
        </DockPanel>
    </Grid>
</Window>
