<Window x:Class="wpfapp02.StackPanelWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfapp02"
        mc:Ignorable="d"
        Title="StackPanelWin" Height="450" Width="800">
    <Grid>
        
        <StackPanel Orientation="Horizontal">
            <Button Margin="5, 0, 0, 0" Width="100" Height="50" Content="Btn 1" />
            <Button Margin="5" Width="100" Height="50" Content="Btn 2" />
            <Button Margin="0, 5, 5, 5" Width="100" Height="50" Content="Btn 3" />
            <Button Margin="0, 5, 0, 5" Width="100" Height="50" Content="Btn 4" />
        </StackPanel>
        
    </Grid>
</Window>
