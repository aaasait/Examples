<Window x:Class="wpfapp03.ElementBinding02"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfapp03"
        mc:Ignorable="d"
        Title="ElementBinding02" Height="450" Width="600">
    <Grid>

        <StackPanel>
            
            <TextBlock Text="{Binding ElementName=slider1, Path=Value}" 
                       Height="40" FontSize="14" />
            
            <Slider x:Name="slider1" Height="40" Width="200"
                    Maximum="100" SmallChange="20" Value="20" />
            
        </StackPanel>
        
    </Grid>
</Window>
